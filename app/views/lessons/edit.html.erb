<div class="formbox yel-bg">
    <div class="form-container-yel">
        <h1>Editer une lesson</h1>

        <%= simple_form_for(@lesson) do |f| %>
        <div class="form-inputs">
            <%= f.input :date,
                        required: true %>
            <%= f.input :length,
                        required: true %>
            <%= f.input :beginning,
                        required: true %>
        </div>

        <div class="form-actions">
            <%= f.button :submit, "Editer", class: "btn-base btn-blue" %>
        </div>
        <% end %>
    </div>
</div>