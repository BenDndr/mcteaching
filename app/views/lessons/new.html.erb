<div class="yelbox">
    <div class="form-container-yel">
        <h1>Cr√©er une lesson</h1>


        <form class="new_lesson" id="new_lesson" action="/lessons" accept-charset="UTF-8" method="post">
        <label for="course">Course</label>
        <input type="text" name="lesson[course]" id="course">
        <label for="date">Date</label>
        <input type="text" name="lesson[date]" id="date">
        <label for="length">Length</label>
        <input type="text" name="lesson[length]" id="length">
        <label for="beginning">Begin</label>
        <input type="text" name="lesson[beginning]" id="beginning">
        <input type="submit" name="commit" value="Create Lesson" data-disable-with="Create Lesson">
        </form>

        <%= form_for(@lesson) do |f| %>
            <%= f.label :course %>
            <%= f.text_field :course %>
        <% end %>
    </div>
</div>