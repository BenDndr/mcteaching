<div id="message-<%= message.id %>">
    <i class="author">
        <span class="text-primary"><%= message.user.first_name %></span>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
    </i>
    <p class="message <%= message.user == current_user ? "lightblue" : "lightergrey" %> mb-0"><%= message.content  %></p>
</div>